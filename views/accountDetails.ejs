<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Candy Shop - Admin Page</title>
        <link rel="stylesheet" href="/styles/adminPage.css ">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    </head>
    <body>  
        <!-- Topbar -->
        <div class="top-bar">
            <!-- Left elements -->
            <div class="left-section">
                <img src="/images/shooping_cart.svg" alt="Icon 1" class="icon">
                <img src="/images/logout.svg" alt="Icon 1" class="icon">
            </div>
            <!-- Logo -->
            <div class="center-section">
                <img src="/images/logo.svg" class="logo"> 
            </div>
            <!-- Right elements -->
            <div class="right-section">
                <img src="/images/home_icon.svg" alt="Icon 1" class="icon" onclick="window.location.href='/home'">
            </div>
        </div>
        <!-- Account Section -->
        <div class="account-section">
            <div class="account-header">
                <h2>Hello <%= customer.name %></h2>
            </div>
            <div class="account-content">
                <div class="account-menu">
                    <button class="menu-option active" onclick="showContent('details', this)">Personal Details</button>
                    <button class="menu-option" onclick="showContent('favorit', this)">Favorits</button>
                    <button class="menu-option" onclick="showContent('orders', this)">My Orders</button>
                </div>
                <!-- Account Details -->
                <div class="content">
                    <div id="details" class="content-item active">
                        <div class="container">
                            <form action="/save-details" method="POST">
                                <div class="form-row">
                                    <div class="form-column">
                                        <div class="form-group">
                                            <label for="name">Name</label>
                                            <input type="text" id="name" name="name" value="<%= customer.name %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email</label>
                                            <input type="email" id="email" name="email" value="<%= customer.email %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="birthdate">Birthday</label>
                                            <input type="text" id="birthdate" name="birthdate" placeholder="dd/mm/yyyy" value="<%= customer.birthdateString %>" required>
                                        </div>
                                    </div>
                                    <div class="form-column">
                                        <div class="form-group">
                                            <label for="phone">Phone Number</label>
                                            <input type="tel" id="phone" name="phone" value="<%= customer.phone %>" pattern="[0-9]{3}-[0-9]{7}" maxlength="10" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="address">Address</label>
                                            <input type="text" id="address" name="address" value="<%= customer.addressString %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="password">Password</label>
                                            <div class="password-container">
                                                <input type="password" id="password" name="password" value="<%= customer.password %>" required>
                                                <i class="fas fa-eye" id="togglePassword"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group full-width">
                                    <button type="submit" class="btn">Save Changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div id="favorit" class="content-item" style="display:none;">This is the content for Option 2.</div>
                    <div id="orders" class="content-item" style="display:none;">This is the content for Option 3.</div>
                </div>
            </div>
        </div>
        <script src="/js/adminPage.js"></script>
    </body>
</html>