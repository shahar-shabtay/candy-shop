<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Candy Shop - Admin Page</title>
        <link rel="stylesheet" href="/public/styles/adminPage.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    </head>
    <body>  
        <!-- Topbar -->
        <div class="top-bar">
            <!-- Left elements -->
            <div class="left-section">
                <img src="/public/images/shooping_cart.svg" alt="Icon 1" class="icon">
                <img src="/public/images/logout.svg" alt="Icon 1" class="icon">
            </div>
            <!-- Logo -->
            <div class="center-section">
                <img src="/public/images/logo.svg" class="logo"> 
            </div>
            <!-- Right elements -->
            <div class="right-section">
                <img src="/public/images/home_icon.svg" alt="Icon 1" class="icon" onclick="window.location.href='/products'">
                <% if (user.role === 'admin') { %> 
                    <img src="/public/images/adminIcon.svg" alt="Icon 1" class="icon" onclick="window.location.href='/personal/admin'">
                <% } %>
            </div>
            
        </div>
        <!-- Account Section -->
        <div class="account-section">
            <div class="account-header">
                <h2>Hello <%= user.name %></h2>
            </div>
            <div class="account-content">
                <div class="account-menu">
                    <button class="menu-option" onclick="window.location.href='/personal/admin/customers'">All Users</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/orders'">All Orders</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/products'">All Products</button>
                    <button class="menu-option active" onclick="window.location.href='/personal/admin/addProducts'">Add Product</button>
                </div>
                <!-- Account Details -->
                <div class="content">
                    <div id="customers" class="content-item active">
                        <div class="container">   
                            <form action="/personal/admin/addProducts" method="POST" enctype="multipart/form-data" id="productForm">
                                <label for="name">Product Name</label>
                                <input type="text" id="name" name="name" required>
                                
                                <label for="price">Product Price</label>
                                <input type="text" id="price" name="price" required>

                                <label for="inventory">Inventory</label>
                                <input type="text" id="inventory" name="inventory" required>
                                <label for="image">Product Image (SVG only):</label>
                                <input type="file" id="fileInput" name="image" accept=".svg" required>
                        
                                <button type="submit" onClick="submitProduct()">Create Product</button>
                            </form>
                        </div>
                    </div>
                    <div id="orders" class="content-item" style="display:none;">This is the content for Option 2.</div>
                    <div id="products" class="content-item" style="display:none;">This is the content for Option 3.</div>
                </div>
            </div>
        </div>
        <script src="/public/js/adminPage.js"></script>
    </body>
</html>