<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Candy Shop - Admin Page</title>
        <link rel="stylesheet" href="/public/styles/adminPage.css">
        <link rel="stylesheet" href="/public/styles/main.css">
        <link rel="stylesheet" href="/public/styles/peronsal.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    </head>
    <body>  
        <!-- Topbar -->
        <header>
            <nav class="navbar">
                <!-- Left elements -->
                <div class="left-section">
                    <img src="/public/images/shooping_cart.svg" alt="Icon 1" class="icon-nav">
                    <img src="/public/images/logout.svg" alt="Icon 1" class="icon-nav" onclick="window.location.href='/logout'">
                </div>
        
                <!-- Logo -->
                <div class="center-section">
                    <img src="/public/images/logo.svg" class="logo" onclick="window.location.href='/products'"> 
                </div>
        
                <!-- Right elements (Hamburger menu and dropdown) -->
                <div class="right-section">
                    <img src="/public/images/nearMe.svg" class="icon nearMe" onclick="window.location.href='/nearMe'">
                    <div class="menu-container">
                        <!-- Hamburger menu icon -->
                        <div class="hamburger-menu" id="hamburger-menu">
                            <span class="bar"></span>
                            <span class="bar"></span>
                            <span class="bar"></span>
                        </div>
        
                        <!-- Dropdown content -->
                        <div class="dropdown-content" id="dropdown-content">
                            <!-- Search bar -->
                            <div class="search-bar">
                                <input type="text" placeholder="Search for candies...">
                            </div>
        
                            <!-- Categories list -->
                            <ul class="categories">
                                <li>Chocolate</li>
                                <li>Gummy Bears</li>
                                <li>Licorice</li>
                                <li>Lollipops</li>
                                <li>Hard Candies</li>
                                <li>Sour Candies</li>
                                <li>Caramel</li>
                            </ul>
        
                            <!-- Personal area and admin area icons -->
                            <div class="menu-icons">
                                <div class="icon-container">
                                    <a href="/personal/myAccount">
                                        <img src="/public/images/user.svg" alt="Personal Area" class="icon">
                                        <div class="icon-label"><%= user.name %></div>
                                    </a>
                                </div>
                                <% if (user.role === 'admin') { %> 
                                <div class="icon-container">
                                    <a href="/personal/admin">
                                        <img src="/public/images/adminIcon.svg" alt="Admin Area" class="icon">
                                        <div class="icon-label">Manage Shop</div>
                                    </a>
                                </div>
                                <% } %> 
                            </div>                            
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Account Section -->
        <div class="account-section">
            <div class="account-header">
                <h2>Hello <%= user.name %></h2>
            </div>
            <div class="account-content">
                <div class="account-menu">
                    <button class="menu-option" onclick="window.location.href='/personal/admin/customers'">All Users</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/orders'">All Orders</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/products'">All Products</button>
                    <button class="menu-option active" onclick="window.location.href='/personal/admin/addProducts'">Add Product</button>
                </div>
                <!-- Account Details -->
                <div class="content">
                    <div id="customers" class="content-item active">
                        <div class="container">   
                            <form action="/personal/admin/addProducts" method="POST" enctype="multipart/form-data" id="productForm">
                                <label for="name">Product Name</label>
                                <input type="text" id="name" name="name" required>
                                <label for="price">Product Price</label>
                                <input type="text" id="price" name="price" required>

                                <label for="inventory">Inventory</label>
                                <input type="text" id="inventory" name="inventory" required>
                                <label for="image">Product Image (SVG only):</label>
                                <input type="file" id="fileInput" name="image" accept=".svg" required>
                        
                                <button id="submitButton" type="submit" onClick="submitProduct()">Create Product</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/public/js/adminPage.js"></script>
        <script src="/public/js/main.js"></script>
    </body>
</html>