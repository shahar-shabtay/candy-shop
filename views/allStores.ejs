<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Candy Shop - Admin Page</title>
        <link rel="stylesheet" href="/public/styles/main.css">
        <link rel="stylesheet" href="/public/styles/personal.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body> 
        <!-- Topbar -->
        <header>
            <nav class="main-navbar">
                <section class="navbar-left">
                    <img src="/public/images/shooping_cart.svg" class="navbar-icon" onclick="window.location.href='/cart'">
                    <img src="/public/images/logout.svg" class="navbar-icon" onclick="window.location.href='/logout'">
                </section>
                <section class="navbar-center">
                    <img src="/public/images/logo.svg" class="logo" onclick="window.location.href='/products'">
                </section>
                <section class="navbar-right">
                    <img src="/public/images/nearMe.svg" class="navbar-icon" onclick="window.location.href='/nearMe'">
                    <div class="side-menu">
                        <div class="sideMenu-sign" id="sideMenu-sign">
                            <span class="bar"></span>
                            <span class="bar"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="sideMenu-content" id="sideMenu-content">
                            <div class="sideMenu-search">
                                <input type="text" placeholder="Search for candies...">
                            </div>
                            <ul class="sideMenu-categories">
                                <li>Chocolate</li>
                                <li>Gummy Bears</li>
                                <li>Licorice</li>
                                <li>Lollipops</li>
                                <li>Hard Candies</li>
                                <li>Sour Candies</li>
                                <li>Caramel</li>
                            </ul>
                            <div class="sideMenu-personal">
                                <% if (user.name) { %> 
                                    <div class="sideMenu-iconContainer">
                                        <a href="/personal/myAccount">
                                            <img src="/public/images/user.svg" class="sideMenu-icon">
                                            <div class="sideMenu-iconLabel"><%= user.name %></div>
                                        </a>
                                    </div>
                                <% } %> 
                                <% if (user.role === 'admin') { %> 
                                    <div class="sideMenu-iconContainer">
                                        <a href="/personal/admin">
                                            <img src="/public/images/adminIcon.svg" class="sideMenu-icon">
                                            <div class="sideMenu-iconLabel">Manage Shop</div>
                                        </a>
                                    </div>
                                <% } %> 
                            </div>
                        </div>
                    </div>
                </section>
            </nav>
        </header>
        <!-- Account Section -->
        <section class="page-content">
            <header class="personal-header">
                <h2>Hello <%= user.name %></h2>
            </header>
            <div class="personal-content">
                <div class="sub-menu">
                    <button class="menu-option" onclick="window.location.href='/personal/admin/customers'">All Users</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/orders'">All Orders</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/products'">All Products</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/addProducts'">Add Product</button>
                    <button class="menu-option active" onclick="window.location.href='/personal/admin/stores'">All Stores</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/addStores'">Add Store</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/facebookInfo'">Facebook Info</button>

                </div>
                <!-- Account Details -->
                <div class="main-content">
                    <!-- ...existing tabs... -->

                    <!-- New "All Stores" view -->
                    <div id="stores" class="content-item">
                        <div class="container">
                            <% if(stores && stores.length > 0) { %> 
                                <form action="" method="POST" id="storeUpdateForm">
                                    <table class="stores-list">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Address</th>
                                                <th>Coordinates</th>
                                                <th class="actions-th">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% stores.forEach(store => { %>
                                            <tr data-id="<%= store.storeId %>" class="store-item">
                                                <td class="store-name">
                                                    <input name="name" class="store-name-input store-input" type="text" value="<%= store.name %>" readonly>
                                                </td>
                                                <td class="store-address">
                                                    <input name="address" class="store-address-input store-input" type="text" value="<%= store.address %>" readonly>
                                                </td>
                                                <td class="store-coordinates">
                                                    <input name="coordinates" class="store-coordinates-input store-input" type="text" value="<%= store.coordinates.join(', ') %>" readonly>
                                                </td>
                                                <td class="action-td">
                                                    <img class="edit-btn-store edit-btn" src="/public/images/edit.svg" onclick="toggleEditModeStore('<%= store.storeId %>')" style="display:inline-block;">
                                                    <img class="save-btn-store edit-btn" src="/public/images/save.svg" onclick="saveStore('<%= store.storeId %>')" style="display:none;">
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </form>
                            <% } else { %>
                                <p>No stores are available.</p>
                            <% } %> 
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <footer class="footer">
            <div class="footer-left">
                <p>Â© Sweetly | Adi Brodesky | Gal Ternovsky | Shahar Shabtay | Ziv Klein </p>
            </div>
            <div class="footer-right">
                <div class="hover-container">
                    <a href="#" class="about-us" id="openAboutModal">About Us</a>
                    |
                    <a href="#" class="talk-to-us" id="openTalkModal">Talk To Us</a>
                    |
                    <a href="https://tinyurl.com/sweetly-facebook" class="facebook">Facebook</a>
                </div>
                
                <!-- Modal for About Us -->
                <div id="aboutModal" class="modal">
                    <div class="modal-content">
                        <span class="close-button">&times;</span>
                        <h2>About Us</h2>
                        <p>At Sweetly, we make finding your favorite sweets easy and enjoyable. We have the most special candies and a lot of stores waiting for you!</p>
                    </div>
                </div>
                
                <!-- Modal for Talk To Us -->
                <div id="talkModal" class="modal">
                    <div class="modal-content">
                        <span class="close-button">&times;</span>
                        <h2>Talk To Us</h2>
                        <p>You can reach us at support@candyshop.com or follow us on social media for the latest updates and tips!</p>
                    </div>
                </div>
            </div>
        </footer>
        <script src="/public/js/personal.js"></script>
        <script src="/public/js/main.js"></script>
        <script type="text/javascript">
          // JavaScript to make the clicked menu option active and display the related content
          const subMenuOptions = [...document.getElementsByClassName('menu-option')];
          subMenuOptions.forEach(option => {
              option.addEventListener('click', () => {
                  subMenuOptions.forEach(o => o.classList.remove('active'))
                  option.classList.add('active');

                  const contentItems = [...document.getElementsByClassName('content-item')];
                  contentItems.forEach(item => {
                      item.style.display = "none";
                  });

                  const activeContent = document.getElementById(option.innerText.trim());
                  activeContent.style.display = "block";
              });
          });
        </script>
    </body>
</html>