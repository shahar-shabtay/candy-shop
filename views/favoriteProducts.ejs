<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Candy Shop - Admin Page</title>
        <link rel="stylesheet" href="/styles/myAccount.css ">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body>  
        <!-- Topbar -->
        <div class="top-bar">
            <!-- Left elements -->
            <div class="left-section">
                <img src="/images/shooping_cart.svg" alt="Icon 1" class="icon">
                <img src="/images/logout.svg" alt="Icon 1" class="icon">
            </div>
            <!-- Logo -->
            <div class="center-section">
                <img src="/images/logo.svg" class="logo"> 
            </div>
            <!-- Right elements -->
            <div class="right-section">
                <img src="/images/home_icon.svg" alt="Icon 1" class="icon" onclick="window.location.href='/home'">
            </div>
        </div>
        <!-- Account Section -->
        <div class="account-section">
            <div class="account-header">
                <h2>Hello <%= customer.name %></h2>
            </div>
            <div class="account-content">
                <!-- Sub Menu -->
                <div class="account-menu">
                    <button class="menu-option" onclick="window.location.href='/myAccount/details'">Personal Details</button>
                    <button class="menu-option active" onclick="window.location.href='/myAccount/favorite'">Favorits</button>
                    <button class="menu-option" onclick="window.location.href='/myAccount/orders'">My Orders</button>
                </div>
                <!-- Account Details -->
                <div class="content">
                    <!-- Details -->
                    <div id="details" class="content-item" style="display:none;">This is the content for personal details</div>
                    <!-- Favorite -->
                    <div id="favorit" class="content-item active">
                        <div class="container">
                            <form action="/myAccount/removeFav" method="POST" id="updateForm">
                                <% if (products.length > 0) { %>
                                    <div class="product-grid">
                                        <% products.forEach(product => { %>
                                            <div class="product-card">
                                                <img src="<%= product.image %>" alt="<%= product.product_name %>" />
                                                <h2><%= product.product_name %></h2>
                                                <p>Price: $<%= product.price %></p>
                                                <button class="remove-favorite" data-product-id="<%= product._id %>">Remove from Favorites</button>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <p>You have no favorite products.</p>
                                <% } %>     
                            </form>                       
                        </div>
                    </div>
                    <!-- Orders -->
                    <div id="orders" class="content-item" style="display:none;">This is the content for personal orders</div>
                </div>
            </div>
        </div>
        <script src="/js/myAccount.js"></script>
        <script>
            // JavaScript to submit the form programmatically when the button is clicked
            document.getElementById('removeBtn').addEventListener('click', function() {
                document.getElementById('updateForm').submit();  // Submit the form
            });
        </script>
    </body>
</html>