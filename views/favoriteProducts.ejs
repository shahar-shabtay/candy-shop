<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Candy Shop - Admin Page</title>
        <link rel="stylesheet" href="/public/styles/myAccount.css ">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <link rel="stylesheet" href="/public/styles/main.css">
        <link rel="stylesheet" href="/public/styles/peronsal.css">
    </head>
    <body>
       <!-- Topbar -->
       <header>
        <nav class="navbar">
            <!-- Left elements -->
            <div class="left-section">
                <img src="/public/images/shooping_cart.svg" alt="Icon 1" class="icon-nav">
                <img src="/public/images/logout.svg" alt="Icon 1" class="icon-nav" onclick="window.location.href='/logout'">
            </div>
    
            <!-- Logo -->
            <div class="center-section">
                <img src="/public/images/logo.svg" class="logo" onclick="window.location.href='/products'"> 
            </div>
    
            <!-- Right elements (Hamburger menu and dropdown) -->
            <div class="right-section">
                <img src="/public/images/nearMe.svg" class="icon nearMe" onclick="window.location.href='/nearMe'">
                <div class="menu-container">
                    <!-- Hamburger menu icon -->
                    <div class="hamburger-menu" id="hamburger-menu">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
    
                    <!-- Dropdown content -->
                    <div class="dropdown-content" id="dropdown-content">
                        <!-- Search bar -->
                        <div class="search-bar">
                            <input type="text" placeholder="Search for candies...">
                        </div>
    
                        <!-- Categories list -->
                        <ul class="categories">
                            <li>Chocolate</li>
                            <li>Gummy Bears</li>
                            <li>Licorice</li>
                            <li>Lollipops</li>
                            <li>Hard Candies</li>
                            <li>Sour Candies</li>
                            <li>Caramel</li>
                        </ul>
    
                        <!-- Personal area and admin area icons -->
                        <div class="menu-icons">
                            <div class="icon-container">
                                <a href="/personal/myAccount">
                                    <img src="/public/images/user.svg" alt="Personal Area" class="icon">
                                    <div class="icon-label"><%= user.name %></div>
                                </a>
                            </div>
                            <% if (user.role === 'admin') { %> 
                            <div class="icon-container">
                                <a href="/personal/admin">
                                    <img src="/public/images/adminIcon.svg" alt="Admin Area" class="icon">
                                    <div class="icon-label">Manage Shop</div>
                                </a>
                            </div>
                            <% } %> 
                        </div>                            
                    </div>
                </div>
            </div>
        </nav>
    </header>
        <!-- Account Section -->
        <section class="account-section">
            <header class="account-header">
                <h2>Hello <%= user.name %><s/h2>
            </header>
            <div class="account-content">
                <nav class="account-menu">
                    <button class="menu-option" onclick="window.location.href='/personal/myAccount/details'">Personal Details</button>
                    <button class="menu-option active" onclick="window.location.href='/personal/myAccount/favorite'">Favorits</button>
                    <button class="menu-option" onclick="window.location.href='/personal/myAccount/orders'">My Orders</button>
                </nav>
                <!-- Account Details -->
                <div class="content">
                    <section id="details" class="content-item"></section>
                    <section id="favorit" class="content-item active">
                        <div class="container">
                            <% if (favoriteProducts.length > 0) { %>
                                <div class="product-grid">
                                    <% favoriteProducts.forEach(favorite => { %>
                                        <div class="product-card">
                                            <img src="<%= favorite.product.imageUrl %>" alt="<%= favorite.product.name %>" />
                                            <h2><%= favorite.product.name %></h2>
                                            <p>Price: $<%= favorite.product.price %></p>
                                            <button class="icon-button cart"><i class="fas fa-shopping-cart" data-product-id="<%= favorite.product.productId %>"></i>Add to Cart</button>
                                            <button class="icon-button remove remove-favorite" data-product-id="<%= favorite.product.productId %>"><i class="fas fa-trash-alt"></i> Remove from Favorites</button>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <p>You have no favorite products.</p>
                            <% } %>     
                        </div>
                    </section>
                    <section id="orders" class="content-item"></section>
                </div>
            </div>
        </section>
        <script src="/public/js/myAccount.js"></script>
        <script src="/public/js/main.js"></script>
        <script>
            // JavaScript to submit the form programmatically when the button is clicked
            document.getElementById('submitButton').addEventListener('click', function() {
                document.getElementById('updateForm').submit();  // Submit the form
            });
        </script>
    </body>
</html>