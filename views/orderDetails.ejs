<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Candy Shop - Admin Page</title>
        <link rel="stylesheet" href="/styles/myAccount.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <style>
            /* Modal container */
.modal {
    display: none !important; /* Ensure it's hidden by default */
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Modal content */
.modal-content {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    width: 300px;
    text-align: center;
}

        </style>
    </head>
    <body>  
        <!-- Topbar -->
        <div class="top-bar">
            <!-- Left elements -->
            <div class="left-section">
                <img src="/images/shooping_cart.svg" alt="Icon 1" class="icon">
                <img src="/images/logout.svg" alt="Icon 1" class="icon">
            </div>
            <!-- Logo -->
            <div class="center-section">
                <img src="/images/logo.svg" class="logo"> 
            </div>
            <!-- Right elements -->
            <div class="right-section">
                <img src="/images/home_icon.svg" alt="Icon 1" class="icon" onclick="window.location.href='/home'">
            </div>
        </div>
        <!-- Account Section -->
        <div class="account-section">
            <div class="account-header">
            </div>
            <div class="account-content">
                <div class="account-menu">
                    <button class="menu-option" onclick="window.location.href='/myAccount/details'">Personal Details</button>
                    <button class="menu-option" onclick="window.location.href='/myAccount/favorite'">Favorits</button>
                    <button class="menu-option active" onclick="window.location.href='/myAccount/orders'">My Orders</button>
                </div>
                <!-- Account Details -->
                <div class="content">
                    <div id="details" class="content-item" style="display:none;"></div>
                    <div id="favorit" class="content-item" style="display:none;">This is the content for Option 2.</div>
                    <div id="orders" class="content-item active">
                        <form>
                            <div id="orderModal" class="modal">
                                <div class="modal-content">

                                    <button onClick="">back</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script src="/js/myAccount.js"></script>
    </body>
</html>