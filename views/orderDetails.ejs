<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Candy Shop - Admin Page</title>
        <link rel="stylesheet" href="/public/styles/adminPage.css">
        <link rel="stylesheet" href="/public/styles/main.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body> 
        <!-- Topbar -->
        <header>
            <nav class="navbar">
                <!-- Left elements -->
                <div class="left-section">
                    <img src="/public/images/shooping_cart.svg" alt="Icon 1" class="icon-nav">
                    <img src="/public/images/logout.svg" alt="Icon 1" class="icon-nav" onclick="window.location.href='/logout'">
                </div>
        
                <!-- Logo -->
                <div class="center-section">
                    <img src="/public/images/logo.svg" class="logo" onclick="window.location.href='/products'"> 
                </div>
        
                <!-- Right elements (Hamburger menu and dropdown) -->
                <div class="right-section">
                    <div class="menu-container">
                        <!-- Hamburger menu icon -->
                        <div class="hamburger-menu" id="hamburger-menu">
                            <span class="bar"></span>
                            <span class="bar"></span>
                            <span class="bar"></span>
                        </div>
        
                        <!-- Dropdown content -->
                        <div class="dropdown-content" id="dropdown-content">
                            <!-- Search bar -->
                            <div class="search-bar">
                                <input type="text" placeholder="Search for candies...">
                            </div>
        
                            <!-- Categories list -->
                            <ul class="categories">
                                <li>Chocolate</li>
                                <li>Gummy Bears</li>
                                <li>Licorice</li>
                                <li>Lollipops</li>
                                <li>Hard Candies</li>
                                <li>Sour Candies</li>
                                <li>Caramel</li>
                            </ul>
        
                            <!-- Personal area and admin area icons -->
                            <div class="menu-icons">
                                <div class="icon-container">
                                    <a href="/personal/myAccount">
                                        <img src="/public/images/user.svg" alt="Personal Area" class="icon">
                                        <div class="icon-label"><%= user.name %></div>
                                    </a>
                                </div>
                                <% if (user.role === 'admin') { %> 
                                <div class="icon-container">
                                    <a href="/personal/admin">
                                        <img src="/public/images/adminIcon.svg" alt="Admin Area" class="icon">
                                        <div class="icon-label">Manage Shop</div>
                                    </a>
                                </div>
                                <% } %> 
                            </div>                            
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Account Section -->
        <section class="account-section">
            <header class="account-header">
                <h2>Hello <%= user.role %></h2>
            </header>
            <div class="account-content">
                <div class="account-menu">
                    <button class="menu-option" onclick="window.location.href='/personal/admin/customers'">All Users</button>
                    <button class="menu-option active" onclick="window.location.href='/personal/admin/orders'">All Orders</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/products'">All Products</button>
                    <button class="menu-option" onclick="window.location.href='/personal/admin/addProducts'">Add Product</button>
                </div>
                <!-- Account Details -->
                <div class="content">
                    <div id="customers" class="content-item active">
                        <div class="container">

                            <header style="position: relative;">
                                <h1>Order Details for Order #<%= orderDetails.orderId %></h1>
                                <img src="/public/images/back.svg" onclick="window.location.href='/personal/admin/orders'" class="back-button">
                            </header>

                            <!-- Info Container: Contact, Delivery Address, and Order Status -->
                            <div class="info-container">
                                <!-- Contact Details -->
                                <section>
                                    <h2><i class="fas fa-info-circle"></i> Contact Information</h2>
                                    <p><strong>Name:</strong> <%= user.name %></p>
                                    <p><strong>Email:</strong> <%= user.email %></p>
                                    <p><strong>Phone:</strong> <%= orderDetails.address.phone %></p>
                                </section>

                                <!-- Delivery Address -->
                                <section>
                                    <h2><i class="fas fa-map-marker-alt"></i> Delivery Address</h2>
                                    <p><%= orderDetails.address.street %> <%= orderDetails.address.number %>, <%= orderDetails.address.city %></p>
                                    <h3>Total Price: $<%= orderDetails.totalPrice.toFixed(2) %></h3>
                                </section>

                                <!-- Order Status -->
                                <section>
                                    <h2><i class="fas fa-truck"></i> Order Status</h2>
                                    <div class="status-bar">
                                        <div class="status-progress" id="statusBar"></div>
                                    </div>
                                    <p id="statusText">Current status: <span id="status"><%= orderDetails.status %></span></p>
                                </section>
                            </div>

                            <!-- Product List in Grid -->
                            <section>
                                <h2><i class="fas fa-candy-cane"></i> Products in Order</h2>
                                <div class="product-grid">
                                    <% orderDetails.products.forEach(product => { %>
                                    <div class="product-item">
                                        <img src="<%= product.image %>" alt="<%= product.name %>">
                                        <h4><%= product.name %></h4>
                                        <p>Quantity: <%= product.quantity %></p>
                                        <p>Total: $<%= (product.price * product.quantity).toFixed(2) %></p>
                                    </div>
                                    <% }) %>
                                </div>
                            </section>
                        </div>
                    </div>
                    <div id="orders" class="content-item" style="display:none;">This is the content for Option 2.</div>
                    <div id="products" class="content-item" style="display:none;">This is the content for Option 3.</div>
                </div>
            </div>
        </section>
        <script src="/public/js/adminPage.js"></script>
        <script src="/public/js/main.js"></script>
    </body>
</html>