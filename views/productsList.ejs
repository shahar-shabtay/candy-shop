<!DOCTYPE html>
<html>
    <head>
        <title>Candy Shop - Products</title>
        <link rel="stylesheet" type="text/css" href="/public/styles/products.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    </head>
    <body>
        <h1>Our Products</h1>

        <a href="/cart" class="cart-button">
            <i class="fas fa-shopping-cart"></i>
        </a>
        
        <div class="products">
        <!-- List all products in DB -->
        <% if (products && products.length > 0) { %> 
            <% products.forEach((product) => { %>
                <div class="product">
                    <img class="img-class" src="<%= product.imageUrl %>" alt="<%= product.name %>" onerror="this.onerror=null; this.src='/public/images/logo.svg';">
                    <h2><%= product.name %></h2>
                    <p><%= product.description %></p>
                    <p>Price: <%= product.price %></p>
                    <% if (product.inventory < 10) { %> 
                        <p class="low-stock">Hurry Up! Only <%= product.inventory %> left!</p>
                    <% } %>
                    <form action="/cart/add" method="POST">
                        <input type="hidden" name="productId" value="<%= product.productId %>">
                        
                        <!-- Add this input below for quantity -->
                        <input type="number" name="quantity" min="1" max="50" value="1">
                        
                        <button class="icon-button cart" type="submit"><i class="fas fa-shopping-cart"></i>Add to Cart</button>
                    </form>
                    <button class="icon-button favorite"><i class="fas fa-heart"></i>Add to Favorites</button>
                </div>
            <% }); %>
        <% } else { %>
            <p>No products found!</p>
        <% } %>
        </div>
    </body>
</html>